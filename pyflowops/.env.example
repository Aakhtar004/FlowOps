# Variables de entorno globales para Docker Compose
# Copie este archivo a .env.local y personalice los valores según su entorno

# Base de datos PostgreSQL
POSTGRES_DB=pyflowops
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123

# Backend FastAPI
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
DEBUG=True

# Frontend React
VITE_API_URL=http://localhost:8000
VITE_APP_TITLE=Plan Estratégico de TI - PyFlowOps

# Configuración de puertos (opcionales)
BACKEND_PORT=8000
FRONTEND_PORT=3000
DB_PORT=5432
